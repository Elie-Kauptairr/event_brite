<h1>Créer un événement</h1>

<%= form_with(model: @event, local: true) do |f| %>
  <div>
    <%= f.label :title, "Titre de l'événement" %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description, "Description de l'événement" %>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :start_date, "Date de début" %>
    <%= f.datetime_select :start_date %>
  </div>

  <div>
    <%= f.label :duration, "Durée (en minutes)" %>
    <%= f.number_field :duration %>
  </div>

  <div>
    <%= f.label :price, "Prix (€)" %>
    <%= f.number_field :price %>
  </div>

  <div>
    <%= f.label :location, "Lieu" %>
    <%= f.text_field :location %>
  </div>

  <div>
    <%= f.submit 'Créer un événement', class: 'btn btn-primary' %>
  </div>
<% end %>
